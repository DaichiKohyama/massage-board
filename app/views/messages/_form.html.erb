<%= form_for(@message, html: {class: "form-horizontal", role:"form"}) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>


 <div class="form-group" style="margin-bottom:10px;">
    <%= f.label :name, "名前:", class: 'col-sm-1 control-label' %>
  
    <%= f.text_field :name , class: "col-sm-10 col-sm-offset-1 form-control" %>
  </div>

 <div class="form-group" style="margin-bottom:30px;">
    <%= f.label :age, "年齢:", class: 'col-sm-1 control-label' %>
  
    <%= f.text_field :age , class: "col-sm-10 col-sm-offset-1 form-control" %>
  </div>

 <div class="form-group">
    <% color = "yellow" %>
    <%= f.label :body, "内容:", class: 'col-sm-1 control-label' %>
    <%= f.text_area :body ,size: "50x10", class:"col-sm-10 col-sm-offset-1 form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit class: "col-sm-offset-1 btn btn-sm btn-primary" %>
  </div>
<% end %>