<h1>メッセージ一覧</h1>
<% @messages.each do |message| %>
  名前: <span class="label label-info"><%= message.name %></span>
  内容:<%= message.body %>
  <br>
<% end %>

<%= form_for(@message) do |f| %>
  名前:
  <%= f.text_field :name %>

  内容:
  <%= f.text_field :body %>
  <%= f.submit class: "btn btn-sm btn-primary"%>
<% end %>
